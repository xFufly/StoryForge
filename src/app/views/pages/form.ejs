<!DOCTYPE html>
<html>
    <head>
        <%- include("../partials/head"); %>
    </head>
    <body>
        <header>
            <%- include("../partials/header"); %>
        </header>

        <main class="liquid-glass">
            <header>
                <h2><%= title %></h2>
                <button onclick="document.location='/'">üè†</button>
                <% if (typeof back !== 'undefined') { %>
                    <button onclick="document.location='<%= back %>'">üîô</button>
                <% } %>
            </header>
            <p><%= form.desc %></p>

            <form 
                class="liquid-glass" 
                action="<%= form.action || '#' %>" 
                method="POST",
                style="width: 75%;"
            >
                <% if (form.fields && form.fields.length > 0) { %>
                    <% for (let input of form.fields) { %>
                        <p><b><%= input.name %></b></p>
                        <% if (input.type === 'select') { %>
                            <select 
                                name="<%= input.id %>" 
                                <% if (input.required) { %> required <% } %>
                            >
                                <% if (input.placeholder) { %>
                                    <option value="" disabled <%= !input.value ? 'selected' : '' %>><%= input.placeholder %></option>
                                <% } %>
                                <% if (input.options) { %>
                                    <% for (let optionKey in input.options) { %>
                                        <option value="<%= optionKey %>" <%= input.value === optionKey ? 'selected' : '' %>><%= input.options[optionKey] %></option>
                                    <% } %>
                                <% } %>
                            </select>
                        <% } else { %>
                            <input 
                                type="<%= input.type || 'text' %>" 
                                name="<%= input.id %>" 
                                placeholder="<%= input.placeholder || '' %>"
                                value="<%= input.value || '' %>"
                                <% if (input.required) { %> required <% } %>
                            >
                        <% } %>
                    <% } %>
                <% } %>

                <input type="submit" value="<%= form.submitLabel %>">
            </form>
        </main>

        <footer>
            <%- include("../partials/footer"); %>
        </footer>
    </body>
</html>
