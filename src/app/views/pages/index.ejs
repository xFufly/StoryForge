<!DOCTYPE html>
<html>
    <head>
        <%- include("../partials/head"); %>
    </head>
    <body>
        <header>
            <%- include("../partials/header"); %>
        </header>
        <main class="liquid-glass">
            <header>
                <h2> <%= lang.title %> </h2>
                <button onclick="document.location='/createProject';";">+</button>
            </header>
            <section>
                <% if (projects.length > 0) { %>
                    <% for (let project of projects) { %>
                        <article class="liquid-glass" style="margin-bottom: 20px;">
                            <div>
                                <p><b> <%= project.name %> </b></p>
                                <p><i> <%= project.description %> </i></p>
                            </div>
                            <div class="button-group">
                                <button class="delete-btn" onclick="if(confirm('√ätes-vous s√ªr de vouloir supprimer ce projet ?')) { document.location='/deleteProject?project=<%= encodeURIComponent(project.name) %>'; }">üóëÔ∏è</button>
                                <button onclick="document.location='/project?project=<%= project.name %>';">&gt;</button>
                            </div>
                        </article>
                    <% } %>
                <% } else { %>
                    <p> <%= lang.none %> </p>
                <% } %>
            </section>
        </main>
        <footer>
            <%- include("../partials/footer"); %>
        </footer>
    </body>
</html>